class Solution:
    def longestCommonPrefix(self, strs: List[str]) -> str:
        if not strs:
            return ""
        common="" #to store the prefix
        min_len=len(strs[0])
        for s in strs:
            # this loop just give us the minimum length
            if len(s)<min_len:
                min_len=len(s)
        for i in range(min_len):
            ch=strs[0][i]   
            for s in strs:
                if ch!=s[i]:
                    return common

            common += ch
        return common
         

        
